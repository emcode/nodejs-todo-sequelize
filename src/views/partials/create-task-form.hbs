<form class="create-task-form" action="/api/project/{{ project.id }}/task" method="post">
    <div class="form-group">
        <label>Task title</label>
        <input required class="form-control" placeholder="Enter title here..." type="text" name="title">
        <small class="form-text text-muted">Some cool task title...</small>
    </div>
    <div class="form-group">
        <label>Task description</label>
        <textarea required class="form-control" rows="3" name="description" placeholder="Enter description here..."></textarea>
        <small class="form-text text-muted">Some cool task description...</small>
    </div>
    <button type="submit" class="btn btn-primary">Create task</button>
</form>
