<form class="create-project-form" action="/api/project" method="post">
    <div class="form-group">
        <label>Project title</label>
        <input required class="form-control" placeholder="Enter title here..." type="text" name="title">
        <small class="form-text text-muted">Some cool project title...</small>
    </div>
    <div class="form-group">
        <label>Project description</label>
        <textarea required class="form-control" rows="3" name="description" placeholder="Enter description here..."></textarea>
        <small class="form-text text-muted">Some cool project description...</small>
    </div>
    <button type="submit" class="btn btn-primary">Create project</button>
</form>
